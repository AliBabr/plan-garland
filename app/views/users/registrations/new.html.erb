<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'custom-input-form' }) do |f| %>
  <div class="container-fluid">
    <div class="row">
      <div class="custom-header">
        <img src="<%= image_url('logo.svg') %>">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="custom-header-title">
        <h1>Sign Up</h1>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card">
          <div class="card-body">
            <%= render "users/shared/error_messages", resource: resource %>
            <div class="form-row">
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <%= f.text_field :first_name, autofocus: true, placeholder: "First Name", class: 'form-control', require: true %>
              </div>
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: 'form-control', require: true %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'form-control', require: true %>
              </div>
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <div class="password-icon">
                  <%= f.password_field :password, autofocus: true, placeholder: "Password", class: 'form-control pwd', require: true %>
                  <i class="fa fa-eye icon-password"></i>
                </div>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <%= f.text_field :username, autofocus: true, placeholder: "Create a Username", class: 'form-control', require: true %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :company_name, autofocus: true, placeholder: "Company Name", class: 'form-control', require: true %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <i class="fa fa-asterisk"></i>
                <%= f.text_field :country, autofocus: true, placeholder: "Country / Region", class: 'form-control', require: true %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :address, autofocus: true, placeholder: "Address", class: 'form-control' %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <%= f.text_field :phone_number, autofocus: true, placeholder: "Phone No.", class: 'form-control' %>
              </div>
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <div class="d-flex custom-form-checkbox mt-3 mb-1">
                  <%= check_box :terms_of_service, autofocus: true, class: 'form-control', require: true %>
                  <label for="">Accept Terms and Conditions</label>
                </div>
              </div>
            </div>
            <div class="form-submit-btn">
              <%= f.submit "Sign up", class: 'btn custom-submit-btn' %>
            </div>
            <div class="custom-signup-text">
              <span>have an account?<a href="<%= new_user_session_path %>">Login here</a></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<script>
    $(".fa-eye").on('click', function () {
        if ($(".pwd").attr('type') === 'password') {
            $(".pwd").attr('type', 'text');
        } else {
            $(".pwd").attr('type', 'password');
        }
    });
</script>